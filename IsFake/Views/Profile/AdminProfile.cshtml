@model IsFakeViewModels.ProfileViewModel

<!DOCTYPE html>
<html lang="en">
<head>

    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background: #c3becc;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        html, body {
            height: 100%;
        }

        .card {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            border-radius: 30px;
            width: 860px;
            height: 480px;
        }

        .left-container {
            background: #37517e;
            flex: 1;
            max-width: 30%;
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100%;
        }

        .right-container {
            background: #f3f3f3;
            flex: 1;
            max-width: 70%;
            height: 100%;
        }


        h2 {
            font-size: 24px;
            margin-bottom: 5px;
        }

        h3 {
            text-align: center;
            font-size: 24px;
            margin-bottom: 5px;
        }

        p {
            font-size: 18px;
            margin-bottom: 20px;
            color: aliceblue
        }

        table {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 280px;
            border-collapse: collapse;
        }

        td {
            padding: 10px;
            border: none;
            border-radius: 20px;
            color: rgb(54, 52, 52);
        }

            td:first-child {
                font-weight: bold;
            }

        .credit a {
            text-decoration: none;
            color: #fff;
            font-weight: 800;
        }

        .credit {
            color: #fff;
            text-align: center;
            margin-top: 10px;
            font-family: Verdana,Geneva,Tahoma,sans-serif;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="left-container">
            <br/>
            <br />
            <h1 style="font-size:50px; color:white;"><strong>@User.Identity.Name</strong></h1>
        </div>
        <div class="right-container">
            <br /><br />
            <h3 style="color:#37517e"><strong>Profile Details</strong></h3>
            <table>
                <tr>
                    <td>First Name:</td>
                    <td>@Model.FirstName</td>
                </tr>
                <tr>
                    <td>Last Name:</td>
                    <td>@Model.LastName</td>
                </tr>
                <tr>
                    <td>User Name:</td>
                    <td>@Model.UserName</td>
                </tr>
                <tr>
                    <td>Email :</td>
                    <td>@Model.Email</td>
                </tr>
                
            </table>
        </div>
    </div>

</body>
</html>
